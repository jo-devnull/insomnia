function tag(name) = new { tag = name }
function item(name) = new { item = name }

revolver {
  type = "create:mechanical_crafting"

  pattern {
    "~---"
    "|=  "
  }

  key {
    `=` = item("create:create_precision_mechanism")
    `~` = item("create:andesite_allow")
    `-` = item("create:iron_sheet")
    `|` = item("create:shaft")
  }
}

wtaerpipe_shotgun {
  type = "create:mechanical_crafting"

  pattern {
    " =~-=--"
    "=|     "
  }

  key {
    `~` = item("create:create_precision_mechanism")
    `-` = item("create:iron_sheet")
    `=` = tag("minecraft:planks")
    `|` = item("create:shaft")
  }
}

custom_smg {
  type = "create:mechanical_crafting"

  pattern {
    "=~=--"
    "||   "
  }

  key {
    `~` = item("create:create_precision_mechanism")
    `-` = item("create:iron_sheet")
    `=` = item("create:andesite_alloy")
    `|` = item("create:shaft")
  }
}

double_barrel_shotgun {
  type = "create:mechanical_crafting"

  pattern {
    " =~-=="
    "||    "
  }

  key {
    `~` = item("create:create_precision_mechanism")
    `-` = item("create:iron_sheet")
  }
}
