const default {
  result = "default"
  hostile = true
  dimension = "overworld"
}

const allow = (default) {
  result = "allow"
}

const deny = (default) {
  result = "deny"
}

const customMobWeight {
  // [<mod>:<entity>] = weight [0-1]
  // maybe counter-intuitive but heigher
  // weight means the entity spawns less
  ["minecraft:drowned"] = 0.75
  ["cataclysm:deepling_brute"] = 0.75
  ["cataclysm:deepling_angler"] = 0.75
  ["upgrade_aquatic:thrasher"] = 0.98
}

rules {
  new {
    result = "deny"
    dimension = "superflat:superflat"
  }

  (default) {
    mod {
      "alexsmobs"
      "alexscaves"
      "aquamirae"
      "mowziesmobs"
      "cataclysm_spellbooks"
      "enderman_overhaul"
    }
  }

  (deny) {
    mod {
      "zoniex"
    }

    biome {
      "alexscaves:candy_cavity"
      "alexscaves:abyssal_chasm"
      "alexscaves:forlorn_hollows"
      "alexscaves:magnetic_caves"
      "alexscaves:primordial_caves"
      "alexscaves:toxic_caves"
    }
  }

  (default) {
    spawner = true
  }

  (default) {
    structuretags { "modpack:always_unsafe" }
  }

  (default) {
    lunar {
      "enhancedcelestials:blood_moon"
      "enhancedcelestials:super_blood_moon"
    }
  }
  
  (deny) {
    lunar {
      "enhancedcelestials:blue_moon"
    }
    
    minheight = 27
  }

  // (deny) {
  //   phase = "day"
  //   biometags { "minecraft:is_ocean" }
  //   random = .90
  //   minheight = 0
  // }

  for (mobName, weight in customMobWeight.toMap()) {
    (deny) {
      mob = mobName
      random = weight
    }
  }

  (deny) {
    mod = "fromtheshadows"
    biometags = "forge:is_cave"
    minheight = 0
  }

  (deny) {
    biometags = "modpack:kinda_safe"
    minheight = 40
  }

  (default) {
    biometags = "modpack:always_unsafe"
  }

  (deny) {
    minheight = 54
  }
}

phases = new Listing {}
