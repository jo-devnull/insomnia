const default {
  result = "default"
  hostile = true
  dimension = "overworld"

  mod {
    "minecraft"
    "zoniex"
  }
}

const allow = (default) {
  result = "allow"
}

const deny = (default) {
  result = "deny"
}

const surfaceLevel = 54

rules {
  (default) {
    mod = new Listing {"alexsmobs" "alexscaves"}
  }

  (default) {
    biometags { "forge:caves" "minecraft:is_cave" "c:caves" "c:is_cave" }
  }

  (deny) {
    minheight = surfaceLevel

    biome {
      "minecraft:beach"
      "minecraft:desert"
      "minecraft:badlands"
      "minecraft:wooded_badlands"
      "minecraft:windswept_savanna"
      "minecraft:eroded_badlands"

      "biomesoplenty:dead_forest"
      "biomesoplenty:old_growth_dead_forest"
      "biomesoplenty:dryland"
      "biomesoplenty:volcano"
      "biomesoplenty:volcano_plains"
      "biomesoplenty:wasteland"
      "biomesoplenty:wasteland_steppe"

      "terralith:ancient_sands"
      "terralith:ashen_savanna"
      "terralith:caldera"
      "terralith:volcanic_crater"
      "terralith:volcanic_peaks"
    }

    mod = "minecraft"

    mob {
      "minecraft:spider"
      "minecraft:creeper"
      "minecraft:drowned"
      "minecraft:zombie"
      "minecraft:skeleton"
    }
  }

  (allow) {
    minheight = surfaceLevel
    weather = "thunder"
  }

  (default) {
    minheight = surfaceLevel
    lunar { "blood_moon" "eclipse_moon" "crimson_moon" }
  }

  (default) {
    structuretags { "modpack:unsafe" }
  }

  (default) {
    biometags { "modpack:unsafe" }
  }

  (deny) {
    minheight = surfaceLevel
  }
}
