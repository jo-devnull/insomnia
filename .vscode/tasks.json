{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Packwiz: Add",
      "icon": {
        "id": "cloud-download",
        "color": "terminal.ansiGreen"
      },
      "dependsOn": ["scripts.install"],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Datagen",
      "icon": {
        "id": "beaker",
        "color": "terminal.ansiYellow"
      },
      "type": "shell",
      "command": "python ${workspaceFolder}/python/datagen.py",

      "problemMatcher": [],

      "options": {
        "cwd": "${workspaceFolder}/minecraft"
      }
    },
    {
      "label": "Packwiz: Refresh",
      "icon": {
        "id": "refresh",
        "color": "terminal.ansiMagenta"
      },
      "type": "shell",
      "command": "packwiz refresh",
      "isBackground": true,
      "options": {
        "cwd": "${workspaceFolder}/minecraft"
    },
      "problemMatcher": []
    },
    {
      "hide": true,
      "label": "packwiz.refresh",
      "type": "shell",
      "command": "packwiz refresh"
    },
    {
      "hide": true,
      "label": "scripts.install",
      "type": "process",
      "command": "python",
      
      "args": [
        "${workspaceFolder}/python/install.py",
        "${input:category}",
        "${input:modspec}"
      ],

      "options": {
        "cwd": "${workspaceFolder}/minecraft"
      }
    },
  ],
  "inputs": [
    {
      "id": "modspec",
      "type": "promptString",
      "description": "Mod source (ID, URL, Slug...)"
    },
    {
      "id": "category",
      "type": "pickString",
      "description": "The category to add to",
      "options": [
        "datapacks",
        "resourcepacks",
        "shaderpacks",

        "cooking",
        "decoration",
        "dependency",
        "mobs",
        "equipment",
        "mechanics",
        "misc",
        "performance",
        "technology",
        "utilities",
        "structures",
        "world"
      ]
    }
  ]
}
