`immersive_armors:recipes/steampunk_boots` {
  type = "create:sequenced_assembly"

  ingredient {
    item = "create_ironworks:copper_armor_boots"
  }

  loops = 1

  results {
    new { item = "immersive_armors:steampunk_boots" chance = 120.0 }
    new { item = "create_ironworks:brass_armor_boots" chance = 4.0 }
    new { item = "create_ironworks:copper_armor_boots" chance = 4.0 }
    new { item = "create:brass_sheet"  chance = 4.0 }
    new { item = "create:brass_nugget" chance = 4.0 }
  }

  sequence {
    new {
      type = "create:deploying"

      ingredients {
        new  { item = "create_ironworks:brass_armor_boots" }
        new  { item = "create:brass_sheet" }
      }

      results {
        new { item = "create_ironworks:brass_armor_boots" }
      }
    }

    new {
      type = "create:deploying"

      ingredients {
        new  { item = "create_ironworks:brass_armor_boots" }
        new  { item = "create:cogwheel" }
      }

      results {
        new { item = "create_ironworks:brass_armor_boots" }
      }
    }

    new {
      type = "create:deploying"

      ingredients {
        new  { item = "create_ironworks:brass_armor_boots" }
        new  { item = "create:electron_tube" }
      }

      results {
        new { item = "create_ironworks:brass_armor_boots" }
      }
    }
  }

  transitionalItem {
    item = "create_ironworks:brass_armor_boots"
  }
}
