`hangglider:recipes/hang_glider` {
  type = "minecraft:crafting_shaped"
  category = "equipment"

  pattern {
    " s "
    "wFw"
  }

  key {
    s { item = "create:brass_ingot" }
    w { item = "hangglider:glider_wing" }
    F { item = "hangglider:glider_framework" }
  }

  result {
    item = "hangglider:hang_glider"
  }

  show_notification = true
}

`hangglider:recipes/glider_framework` {
  type = "minecraft:crafting_shaped"
  category = "equipment"

  pattern {
    " # "
    "#=#"
    "###"
  }

  key {
    `=` { item = "create:brass_ingot" }
    `#` { item = "minecraft:iron_ingot" }
  }

  result {
    item = "hangglider:glider_framework"
  }

  show_notification = true
}

